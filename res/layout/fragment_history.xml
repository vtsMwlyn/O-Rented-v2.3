<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    tools:context=".HistoryFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Your History"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Order"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:text="Car and Driver"
        android:background="@drawable/rounded_subtitle"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_car_and_driver"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:text="Car Only"
        android:background="@drawable/rounded_subtitle"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_car_only"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:text="Cancelled"
        android:background="@drawable/rounded_subtitle"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_height="90dp"
            android:layout_width="300dp"
            android:background="@drawable/rounded_subtitle">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="TODAY, 19:30 PM"
                    android:textSize="11.5sp"
                    android:textColor="@color/light_grey"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:layout_marginLeft="-4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BDG TO BALI"
                        android:textColor="@color/light_grey"
                        android:textSize="11.5sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/baseline_directions_car_24"
                        android:layout_marginLeft="-2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toyota Innova - White"
                        android:textColor="@color/light_grey"
                        android:textSize="11.5sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="With Mr.Tony"
                        android:textColor="@color/light_grey"
                        android:textSize="11.5sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="19dp">

                    <ImageView
                        android:layout_height="18dp"
                        android:layout_width="18dp"
                        android:src="@drawable/baseline_payments_24"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="950 K"
                        android:textColor="@color/light_grey"
                        android:textStyle="bold"
                        android:layout_marginTop="3.9dp"
                        android:layout_marginLeft="3dp"
                        android:textSize="11sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_thumb_up_24"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDER AGAIN"
                    android:textColor="@color/light_grey"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="3dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>
