<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Rent"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Details"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="-10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_layout2"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/car_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_directions_car_24_2"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_layout"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Name"
                    android:textColor="@color/light_grey"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_payments_24"
                    android:layout_marginLeft="110dp"/>

                <TextView
                    android:id="@+id/car_rent_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0K / Day"
                    android:textColor="@color/light_grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/inp_pick_up_location"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Pick Up Location"
                android:drawableLeft="@drawable/baseline_gps_fixed_24"
                android:background="@drawable/rounded_input3"
                android:paddingLeft="10dp"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/inp_pick_up_date"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="Pick Up Date"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:background="@drawable/rounded_input3"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                </LinearLayout>

                <EditText
                    android:id="@+id/inp_pick_up_time"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="Pick Up Time"
                    android:drawableLeft="@drawable/baseline_access_time_24"
                    android:background="@drawable/rounded_input3"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/inp_driver"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="Driver"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:background="@drawable/rounded_input3"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp">

                </LinearLayout>

                <EditText
                    android:id="@+id/inp_payment"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:hint="Payment"
                    android:drawableLeft="@drawable/baseline_payment_24"
                    android:background="@drawable/rounded_input3"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/inp_duration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Rental Duration"
                android:drawableLeft="@drawable/baseline_timelapse_24"
                android:background="@drawable/rounded_input3"
                android:paddingLeft="10dp"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/make_schedule_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Make Schedule"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:letterSpacing="0.0005"
                android:backgroundTint="@color/light_grey"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>