<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Car"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Details"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="-10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_layout2"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/car_image"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:src="@drawable/baseline_directions_car_24_2"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_layout"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daihatsu Ayla"
                android:textStyle="bold"
                android:textColor="@color/light_grey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_payments_24"/>

                <TextView
                    android:id="@+id/car_rent_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="200K / Hari"
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_chair_24"/>

                    <TextView
                        android:id="@+id/car_seat"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textColor="@color/light_grey"
                        android:text="5 Seats"
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_settings_suggest_24"/>

                    <TextView
                        android:id="@+id/car_control"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textColor="@color/light_grey"
                        android:text="Manual"
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:src="@drawable/baseline_sensor_door_24"/>

                    <TextView
                        android:id="@+id/car_door"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textColor="@color/light_grey"
                        android:text="5 Doors"
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/rent_car_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Rent This Car"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:letterSpacing="0.0005"
                android:backgroundTint="@color/light_grey"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>