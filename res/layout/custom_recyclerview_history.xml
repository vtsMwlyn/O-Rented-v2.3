<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="90dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="90dp"
        android:layout_width="280dp"
        android:background="@drawable/rounded_subtitle"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pick_up_date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="2000-01-01, "
                    android:textSize="11.5sp"
                    android:textColor="@color/light_grey"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/pick_up_time"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="00:00"
                    android:textSize="11.5sp"
                    android:textColor="@color/light_grey"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_location_on_24"
                    android:layout_marginLeft="-4dp"/>

                <TextView
                    android:id="@+id/pick_up_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Somewhere"
                    android:textColor="@color/light_grey"
                    android:textSize="11.5sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_directions_car_24"
                    android:layout_marginLeft="-2dp"/>

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Name"
                    android:textColor="@color/light_grey"
                    android:textSize="11.5sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With Driver Name"
                    android:textColor="@color/light_grey"
                    android:textSize="11.5sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="19dp">

                <ImageView
                    android:layout_height="18dp"
                    android:layout_width="18dp"
                    android:src="@drawable/baseline_payments_24"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/rent_price"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="0 K"
                    android:textColor="@color/light_grey"
                    android:textStyle="bold"
                    android:layout_marginTop="3.9dp"
                    android:layout_marginLeft="3dp"
                    android:textSize="11sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_thumb_up_24"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER AGAIN"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>