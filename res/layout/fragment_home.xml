<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:hint="Yuk, cari mobil di sini..."
            android:textColorHint="@color/light_grey"
            android:textSize="14sp"
            android:drawableLeft="@drawable/baseline_search_24"
            android:background="@drawable/rounded_input2"
            android:paddingLeft="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/filter_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:backgroundTint="@color/dark_grey"
            android:textColor="@color/light_grey"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yuk pilih mobil"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yang kamu inginkan"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="-2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_car_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Drivers"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_layout"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_person_24_2"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Ahmad Herbianto"
            android:textColor="@color/light_grey"
            android:textStyle="bold"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/baseline_star_24"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:textColor="@color/light_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Trips"
            android:textColor="@color/light_grey"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_verified_24"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_layout"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_person_24_2"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Leon"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_star_24"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_layout"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_person_24_2"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Tony"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_star_24"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5.5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.6"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>